header.header
	div.header__top
		div.container
			div.row.align-items-center
				div.col-12.col-md-6
					div.header__soc
						include ../icon/icon.pug
						a.header__soc-link(href="#")
							+icon('icon--fb')

						a.header__soc-link(href="#")
							+icon('icon--tw')

						a.header__soc-link(href="#")
							+icon('icon--gl')

						a.header__soc-link(href="#")
							+icon('icon--in')

				div.col-12.col-md-6
					div.header__contacts
						include ../contacts/contacts.pug

	div.header__body
		div.container
			div.row
				div.col-12.col-md-4.col-lg-6
					div.header__logo
						include ../logo/logo.pug

				div.col-12.col-md-8.col-lg-6
					div.header__body-action
						include ../menu/menu.pug
						include ../btn/btn.pug
						+btn({text: 'Sign In'})